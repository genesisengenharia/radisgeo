<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_frameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:background="@color/main_background"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/main_background"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">


            <LinearLayout
                android:id="@+id/coleta_item"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/config_formulario_receber_item_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_bar_button_drawable"
                    android:padding="@dimen/dashboard_button_padding"
                    android:src="@drawable/config" >
                </ImageButton>

                <TextView
                    android:id="@+id/config_formulario_receber_item_text"
                    style="@style/dashBoardText"
                    android:text="Receber"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/main_background"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:id="@+id/config_mapas_item"
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/config_formulario_editar_item_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_bar_button_drawable"
                    android:padding="@dimen/dashboard_button_padding"
                    android:src="@drawable/config" />

                <TextView
                    style="@style/dashBoardText"
                    android:id="@+id/config_formulario_editar_item_text"
                    android:text="Editar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/main_background"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">



            <LinearLayout
                android:id="@+id/config_projeto_item"
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/config_formulario_excluir_item_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_bar_button_drawable"
                    android:padding="@dimen/dashboard_button_padding"
                    android:src="@drawable/config" >
                </ImageButton>

                <TextView
                    android:id="@+id/config_formulario_excluir_item_text"
                    style="@style/dashBoardText"
                    android:text="Excluir" >
                    <!--//android:text="@string/text_show_position_on_map" >-->
                </TextView>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>